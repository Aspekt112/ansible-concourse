#!/bin/bash

{{ concourseci_bin_dir }}/{{ concourseci_binary_file }} worker \
  --work-dir {{ concourseci_worker_dir }} \
  --peer-ip 127.0.0.1 \
  --tsa-host localhost \
  --tsa-public-key {{ concourseci_host_key.file }}.pub \
  --tsa-worker-private-key {{ concourseci_worker_key[concourseci_worker_position | int].file }} &>> {{ concourseci_log_worker }}
